<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="#998F8F8F"
                android:startColor="#998F8F8F"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#A1A1A1" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#99D1D1D1"
                android:startColor="#99E0E0E0"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#A1A1A1" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#66C4C4C4"
                android:startColor="#66C4C4C4"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#D1D1D1" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>

</selector>